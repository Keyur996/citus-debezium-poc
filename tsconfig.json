{
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2016",
    "lib": [],
    "module": "commonjs",
    "pretty": true,
    "moduleResolution": "Node10",
    "baseUrl": "src",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["overWriteTypes/"],
      "@/*": ["*"],
      "@db/*": ["db/*"],
      "@lib/*": ["lib/*"],
      "@config": ["config"],
      "@common/*": ["common/*"],
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  }
}
